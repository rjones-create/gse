{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/gse/schema/v1.json",
  "title": "GSE Spec v1",
  "description": "Structure-only schema. Validates shape and types. Defines no authority, meaning, or enforcement.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "timestamp", "type", "actor", "payload"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "id"],
      "properties": {
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "payload": {
      "type": "object"
    },
    "meta": {
      "type": "object"
    }
  }
}
